@model IEnumerable<WebApplication.Models.SuggestionModel>

<script src="https://ajax.microsoft.com/ajax/jquery/jquery-3.3.1.min.js" type="text/javascript"></script>
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="searchbarHolder">

    <h2>Suggestions</h2>

    <div class="box">
        <form method="post" action="@Url.Action("Suggestion", "Suggestion")">
            @Html.TextBox("searchInput")

            <script>
        $("#searchInput").autocomplete({
    source: function (request, response) {
        $.ajax({
            url: '@Url.Action("GetSearchValue", "Home")',
            dataType: "json",
            data: { search: $("#searchInput").val() },
            success: function (data) {
                response($.map(data, function (item) {
                    return { label: item.Name, value: item.Name };
                }))
            }
        })
    },
    error: function (xhr, status, error) {
        alert("Error search");
    }
});
            </script>
            <button type="submit"><i class="fa fa-search"></i></button>
        </form>
    </div>

</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col" class="tdtext">#</th>
            <th scope="col" class="tdtext">Venue</th>
            <th scope="col" class="tdtext">City</th>
            <th scope="col" class="tdtext">Weather</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row" class="tdtext">1</th>
            <td class="tdtext" onclick="window.location.href = '@(Url.Action("Index", "NextResult", new { param = "milton" }))'">
                Glen Eden
            </td>
            <td class="tdtext">Milton</td>
            <td><img id="weatherIcon" src="~/img/snow.svg" /></td>
        </tr>
        <tr>
            <th scope="row" class="tdtext">2</th>
            <td class="tdtext" onclick="window.location.href = '@(Url.Action("Index", "NextResult", new { param = "toronto" }))'">
                Freestyle Skiing Ontario
            </td>
            <td class="tdtext">Osler</td>
            <td><img id="weatherIcon" src="~/img/sunnycloudy.svg" /></td>
        </tr>
        <tr>
            <th scope="row" class="tdtext">3</th>
            <td class="tdtext" onclick="window.location.href = '@(Url.Action("Index", "NextResult", new { param = "mississauga" }))'">
                Trakkers Cross-Country Ski Clb
            </td>
            <td class="tdtext">Toronto</td>
            <td><img id="weatherIcon" src="~/img/sunnyrainy.svg" /></td>
        </tr>
        <tr>
            <th scope="row" class="tdtext">4</th>
            <td class="tdtext" onclick="window.location.href = '@(Url.Action("Index", "NextResult", new { param = "mississauga" }))'">
                Alpine Indoor Ski and Snowboard Training Centre
            </td>
            <td class="tdtext">Mississauga</td>
            <td><img id="weatherIcon" src="~/img/sunnythunder.svg" /></td>
        </tr>
    </tbody>
</table>

<div class="mapouter">
    <div class="gmap_canvas"><iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=ski+resorts+ontario&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.crocothemes.net">crocothemes.net</a></div>
    <style>
        .mapouter {
            text-align: right;
            height: 500px;
            width: 600px;
        }

        .gmap_canvas {
            overflow: hidden;
            background: none !important;
            height: 500px;
            width: 600px;
        }
    </style>
</div>

